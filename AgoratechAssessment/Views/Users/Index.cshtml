@model Pagination<AgoratechAssessment.Models.Users>
@{
    ViewData["Title"] = "User Details";
}

<h1>Users</h1>

@{
    var previousDisabled = !Model.PreviousPage ? "disabled" : " ";
    var nextDisabled = !Model.NextPage ? "disabled" : " ";
}
<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   class="btn btn-default @previousDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   class="btn btn-default @nextDisabled">
    Next
</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("First Name")
            </th>
            <th>
                @Html.DisplayName("Surname")
            </th>
            <th>
                @Html.DisplayName("Cellphone Number")
            </th>
            <th>
                @Html.DisplayName("SA Id Number")
            </th>
            <th>
                @Html.DisplayName("House Number")
            </th>
            <th>
                @Html.DisplayName("Complex Name")
            </th>
            <th>
                @Html.DisplayName("Address")
            </th>
            <th>
                @Html.DisplayName("Postal Code")
            </th>
            <th><a asp-action="Create" class="btn btn-sm btn-outline-success"> Add New User</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CellNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HouseNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComplexName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ml-1" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
